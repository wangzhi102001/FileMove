<Window
    x:Class="FileMove.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FileMove"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="400"
    Height="250"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="10"
                VerticalAlignment="Center"
                Text="目录" />
            <TextBox
                x:Name="tb1"
                Width="100"
                Height="20"
                Margin="10" />
            <Button
                Width="100"
                Height="20"
                Click="Button_Click"
                Content="分类" />
            <Label x:Name="label" Height="40" Margin="10"/>
        </StackPanel>


    </Grid>
</Window>
